<MyQuestionWidget@Label>:
    background_color: (0, 1, 1)
    font_size: 20
    text_size: self.width, None  
    size_hint: (1, 1)

<MyButton@Button>:
    font_size: 20
    size_hint: (1, 1)
    disabled: True
    border_radius: 100
    shadow_color: (1, 0.2, 0.2)
    background_color: (0.5, 0.5, 1)

<MainWindow>:
    orientation: 'vertical'
    spacing: 20

    RecycleView:
        id: list_view
        size_hint: (1, 0.1)
        viewclass: "MyQuestionWidget"

        RecycleBoxLayout:
            data: root.data
            orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.02)
        padding: 10
        spacing: 5
        align: 'center'
        valign: 'center'

        Label:
            text: "Enunciado:"
            font_size: 30
            pos_hint: {'x': 0, 'y': 0}

        TextInput:
            id: text_input
            multiline: False
            font_size: 30
            pos_hint: {'x': 0, 'y': 0}
            on_text: root.update_table()

    BoxLayout:
        orientation:'horizontal'
        size_hint: (1, 0.05)
        padding: 10
        spacing: 5

        MyButton: 
            id: btn_remove_question
            text: "REMOVER QUESTÃO"

        MyButton:
            id: btn_add_question
            text: "ADICIONAR QUESTÃO"
            on_press: root.add_question()

        MyButton:
            id: btn_generate_html
            text: "GERAR HTML"
            # on_press: root.add_question()